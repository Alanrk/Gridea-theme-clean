<!DOCTYPE html>
<html>
  <head>
     <%- include('./includes/head', { siteTitle: `${tag.name} | ${themeConfig.siteName}` }) %>
  </head>
  <body>
  	<!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand" href="<%= themeConfig.domain %>"><%= themeConfig.siteName %></a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <% menus.forEach(function(menu) { %>
          <li class="nav-item">
              <% if (menu.openType === 'External') { %>
              <a class="nav-link" href="<%= menu.link %>" target="_blank"><%= menu.name %></a>
              <% } else { %>
              <a class="nav-link" href="<%= menu.link %>"><%= menu.name %></a>
              <% } %>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </nav>
<!-- Page Header -->
  <header class="masthead" style="background-image: url('<%= themeConfig.domain %>/media/images/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1 class="tag-tl">#<%= tag.name %></h1>
          </div>
        </div>
      </div>
    </div>
  </header>
  <%- include('./includes/post-list') %>
 <%- include('./includes/footer') %>
  </body>
</html>